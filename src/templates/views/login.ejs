<body>
	<%- include("../partials/loader"); %>
	 <%- include("../partials/navigation"); %>
   
	

	
	 <!-- {{#if  errorMessage}}
		<div id="errorBox" class="alert  errorMessage "style="background-color: {{errorMessage.type}};" >

		<button type="button", style="padding: 10px; font: size 1.2em;" class="close- dismissBtn" id="dissmissBtn"  data-dismiss="alert">&times;</button>
		
		{{errorMessage.message}}
	
	</div>
